
import random


letters = "abcdefghijklmnopqrstufwxyz"
number = "1234567890"
special = "!$%&/()"
chars = letters + number + special

length = int(input("How long do you want your password to be? "))

print ("Your password: ")
password = ""
for x in range(length):
    password += random.choice(chars)
    if (x + 1) % 4 == 0:
        password +="-"

print (password)
